{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}


<div class="columns is-mobile is-centered">
    <div class="column is-four-fifths">
        <header>
            <div class="content">
                <h1>mon panier :</h1>
            </div>
        </header>

        <section>

            <div class="columns is-multiline">


                {% for ligne in panier %}

                <div class="column is-half">

                    <div class="columns is-multiline">
                        <div class="column is-narrow is-half">
                            <div class="box img-panier">
                                <figure class="is-flex is-align-items-center is-justify-content-center image">
                                    <img src="/images/produit/{{ ligne.imageNom }}" alt="image du produit" />
                                </figure>
                            </div>
                        </div>
                        <div class="column is-half">
                            <div class="content">
                                <b>
                                    <h2>{{ ligne.nom}} </h2>
                                </b>
                            </div>
                            <div class="content">
                                {{ ligne.accroche }} <br><br>
                            </div>
                            <div class="content">

                                {% if ligne.quantite > 1 %}
                                <a href="/panier/reduire/{{ligne.id}}">
                                    <button class="button color-secondary">--</button>
                                </a>
                                {% else %}
                                <button class="button color-secondary" disabled>-</button>
                                {% endif %}
                                <b>{{ ligne.quantite }}</b>
                                <a href="/panier/ajouter/{{ligne.id}}">
                                    <button class="button color-dark">+</button>
                                </a> <br>
                            </div>

                            <div>
                                <a href="/panier/supprimer/{{ligne.id}}">
                                    <button class="button color-light">supprimer</button>
                                </a>
                            </div>
                            <br>
                            <div>
                                <p class="color-prix">
                                    {{ ligne.prixTotal }} €
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="content">
                <h4>
                    Prix total de la commande :
                </h4>
                <p class="color-prix">
                    {{ panier[0]["prixCommande"]}} €
                </p>
            </div>
            <div>
                <a href="{{ path('commande_recapitulatif') }}">
                    <button class="button color-secondary">Passer commande</button>
                </a>

            </div>
        </section>
    </div>
</div>

{% endblock %}