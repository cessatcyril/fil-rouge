{% extends 'base.html.twig' %}

{% block title %}Hello Catalogueinputler!{% endblock %}

{% block body %}
{# form(form) #}




<div class="columns is-mobile is-centered">
    <div class="column is-four-fifths">
        {{form_start(form)}}

        <div class="field">
            {{ form_label(form.numero_carte, 'Numéro de carte banquaire', {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.numero_carte, {'attr': {'class': 'input'}}) }}
                {{ form_errors(form.numero_carte) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.cryptogramme, 'Cryptogramme', {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.cryptogramme, {'attr': {'class': 'input'}}) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.detenteur, 'Détenteur de la carte', {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.detenteur, {'attr': {'class': 'input'}}) }}
            </div>
        </div>


        <div class="field is-horizontal">
            <div class="field">
                {{ form_label(form.mois, 'Date d\'expiration de la carte', {'label_attr': {'class': 'label'}}) }}
                <div class="control">
                    <div class="select">
                        {{ form_widget(form.mois, {'attr': {'class': 'input'}}) }}
                    </div>
                    <div class="select">
                        {{ form_widget(form.annee, {'attr': {'class': 'input'}}) }}
                    </div>
                </div>
            </div>
        </div>


        <div class="field is-grouped">
            <p class="control">
                {{ form_widget(form.save, {'attr': {'class': 'button color-secondary'}}) }}
            </p>
            <p class="control">
                {# <a class="button is-light">
                    Annuler
                </a> #}
            </p>
        </div>
        {{form_end(form)}}
    </div>
</div>
{% endblock %}