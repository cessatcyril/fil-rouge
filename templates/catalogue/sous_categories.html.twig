{% extends 'base.html.twig' %}

{% block title %}Hello CatalogueController!{% endblock %}

{% block body %}

{# mise en page des vide sur les cotés #}
<div class="columns is-mobile is-centered is-multiline">
    <div class="column is-four-fifths">
        <nav class="breadcrumb" aria-label="breadcrumbs">
            <ul>
                <li><a href="/">Accueil</a></li>
                <li class="is-active"><a href="#" aria-current="page">{{sousCategories.0.categorie.catNom}}</a></li>
            </ul>
        </nav>

        <header>
            <div class="content">
                <h1>Liste de nos sous-catégories :</h1>
            </div>
        </header>
        {# colonne multiligne dans la colone principale #}
        <div class="columns is-mobile is-multiline">
            {# boucle pour générer un element card contenue dans une sous-colonne de largeur 3 #}
            {% for sousCategorie in sousCategories %}
            <div class="column is-3">
                <div class="block is-4">
                    <div class="card">
                        <div class="card-image">
                            <a href="/liste_produits/{{sousCategorie.Id}}">
                                <img src="/images/sousCategorie/{{ sousCategorie.souImage }}" alt="">

                            </a>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-content">
                                    <p class="title is-4">{{sousCategorie.souNom}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}