{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>CliNom</th>
                <td>{{ client.cliNom }}</td>
            </tr>
            <tr>
                <th>CliPrenom</th>
                <td>{{ client.cliPrenom }}</td>
            </tr>
            <tr>
                <th>CliNaissance</th>
                <td>{{ client.cliNaissance ? client.cliNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CliTel</th>
                <td>{{ client.cliTel }}</td>
            </tr>
            <tr>
                <th>CliFax</th>
                <td>{{ client.cliFax }}</td>
            </tr>
            <tr>
                <th>CliSexe</th>
                <td>{{ client.cliSexe ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CliDate</th>
                <td>{{ client.cliDate ? client.cliDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
