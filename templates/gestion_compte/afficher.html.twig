{% extends 'base.html.twig' %}

{% block title %}Hello GestionCompteController!{% endblock %}

{% block body %}
<section>
    <div class="columns">
        <div class="column is-10 is-offset-1">

            <div class="block">
                <!-- form en 2 morceaux-->
                <div class="field is-horizontal">
                </div>
                <div class="field-body">
                    <!--form titre -->
                    <div class="field">
                        <label class="label" for="title">Nom</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="title" value="{{ infoClient.cliNom  }}" disabled>
                        </div>
                    </div>
                    <!-- form artiste-->
                    <div class="field">
                        <label class="label" for="artist">Prenom</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="artist"
                                value="{{ infoClient.artist?disk.artist.artistName:'' }}" disabled>
                        </div>
                    </div>
                </div>

                <!-- form en 2 morceaux-->
                <div class="field is-horizontal">
                </div>
                <div class="field-body">
                    <!-- form annÃ©e-->
                    <div class="field">
                        <label class="label" for="year">Year</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="year" value="{{ infoClient.discYear  }}" disabled>
                        </div>
                    </div>
                    <!-- form genre-->
                    <div class="field">
                        <label class="label" for="genre">Genre</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="genre" value="{{ infoClient.discGenre }}" disabled>
                        </div>
                    </div>
                </div>

                <!-- form en 2 morceaux-->
                <div class="field is-horizontal">
                </div>
                <div class="field-body">
                    <!-- form label -->
                    <div class="field">
                        <label class="label" for="labelDisc">Label</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="labelDisc" value="{{ infoClient.discLabel }}"
                                disabled>
                        </div>
                    </div>
                    <!-- form price-->
                    <div class="field">
                        <label class="label" for="price">Price</label>
                        <div class="control is-expanded">
                            <input class="input" type="text" name="price" value="{{ infoClient.discPrice }}" disabled>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block">
                <div class="columns">
                    <div class="column is-half">

                        <!-- block affichage image-->
                        <div class="block">
                            <figure class="image is-480x480">
                                <img src="/pic/{{infoClient.id}}">
                            </figure>
                        </div>

                        <!-- block affichage buton de lien CRUD -->
                        <div class="block">
                            <div class="field is-grouped">
                                <p class="control">
                                    <a class="button is-link" href="{{ path('disc_modif', {'obj': infoClient.id}) }}">
                                        Modifier
                                    </a>
                                </p>
                                <p class="control">
                                    <a class="button is-link"
                                        href="{{ path('disc_supprimer', {'obj': infoClient.id}) }}">
                                        Supprimer
                                    </a>
                                </p>
                                <p class="control">
                                    <a class="button is-link" href="{{ path('disc_acceuil') }}">
                                        Retour
                                    </a>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
{% endblock %}